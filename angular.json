{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "./",
  "projects": {
    "common": {
      "projectType": "library",
      "root": "common",
      "sourceRoot": "common/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "common/tsconfig.lib.json",
            "project": "common/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "common/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "common/src/test.ts",
            "tsConfig": "common/tsconfig.spec.json",
            "karmaConfig": "common/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "common/tsconfig.lib.json",
              "common/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "common"
}
