{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-common": {
      "projectType": "library",
      "root": "projects/angular-common",
      "sourceRoot": "projects/angular-common/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/angular-common/tsconfig.lib.json",
            "project": "projects/angular-common/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/angular-common/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/angular-common/tsconfig.lib.json",
              "projects/angular-common/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  }
}
